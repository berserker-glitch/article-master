generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DB_URL")
}

enum ArticleStatus {
  PENDING
  RUNNING
  COMPLETE
  FAILED
}

enum PlanTier {
  FREE
  PRO
  PREMIUM
}

enum UserRole {
  USER
  SUPERADMIN
}

model User {
  id              String    @id @default(cuid())
  email           String    @unique
  username        String    @unique
  passwordHash    String
  emailVerifiedAt DateTime?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  role          UserRole  @default(USER)
  planChosenAt  DateTime?

  // Billing / plans (Paddle)
  planTier                 PlanTier @default(FREE)
  planActiveUntil          DateTime?
  paddleCustomerId         String?  @unique
  paddleSubscriptionId     String?  @unique
  paddlePriceId            String?
  paddleSubscriptionStatus String?

  // Premium-only generation preferences (extra instructions; hardcoded prompt stays)
  premiumGenerationPrefs Json?

  sessions  Session[]
  articles  Article[]
  wordpress WordPressConnection[]
}

model SignupToken {
  id        String    @id @default(cuid())
  email     String
  tokenHash String    @unique
  expiresAt DateTime
  usedAt    DateTime?
  createdAt DateTime  @default(now())

  @@index([email])
  @@index([expiresAt])
}

model Session {
  id        String   @id @default(cuid())
  userId    String
  tokenHash String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  lastSeenAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([expiresAt])
}

model Article {
  id               String        @id @default(cuid())
  userId           String
  status           ArticleStatus @default(PENDING)
  sourceUrl        String
  videoId          String
  videoTitle       String? @db.Text
  videoDescription String? @db.LongText

  transcript      String? @db.LongText
  chapters        Json?
  draftMarkdown   String? @db.LongText
  critique        Json?
  finalMarkdown   String? @db.LongText
  errorMessage    String? @db.LongText

  // Generation metrics (best-effort estimates)
  promptTokens      Int?
  completionTokens  Int?
  totalTokens       Int?
  wordCount         Int?
  estimatedCostUsd  Float?
  progress          Int?    @default(0)

  // Per-article generation preferences (tone, include/exclude, SEO keywords)
  generationPrefs   Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, createdAt])
  @@index([videoId])
}

model WordPressConnection {
  id                   String   @id @default(cuid())
  userId               String
  siteUrl              String
  username             String
  encryptedAppPassword String   @db.Text
  isDefault            Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@unique([userId, siteUrl])
}